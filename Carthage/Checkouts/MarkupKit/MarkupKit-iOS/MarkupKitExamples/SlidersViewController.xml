<?properties {
    "columnView.border": {
        "layer.borderColor": "#cccccc",
        "layer.borderWidth": 0.5
    },

    "slider.color": {
        "minimumValue": 0.0,
        "maximumValue": 1.0
    }
}?>

<LMLayerView layoutMarginsRelativeArrangement="false" backgroundColor="#ffffff">
    <LMColumnView layoutMargins="20" spacing="20">
        <LMColumnView class="columnView.border" alignToGrid="true" layoutMargins="10">
            <LMRowView>
                <UILabel text="Red"/>
                <UISlider id="redSlider" class="slider.color" onValueChanged="sliderValueChanged:"/>
            </LMRowView>
            <LMRowView>
                <UILabel text="Green"/>
                <UISlider id="greenSlider" class="slider.color" onValueChanged="sliderValueChanged:"/>
            </LMRowView>
            <LMRowView>
                <UILabel text="Blue"/>
                <UISlider id="blueSlider" class="slider.color" onValueChanged="sliderValueChanged:"/>
            </LMRowView>
        </LMColumnView>

        <LMColumnView class="columnView.border" layoutMargins="10" weight="1">
            <UIView id="colorView"/>
        </LMColumnView>
    </LMColumnView>
</LMLayerView>
