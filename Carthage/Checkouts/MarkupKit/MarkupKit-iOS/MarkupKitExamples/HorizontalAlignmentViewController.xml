<?properties {
    "cell": {
        "layoutMargins": 8,
        "layer.borderWidth": 0.5,
        "layer.borderColor": "#cccccc"
    },

    "divider": {
        "backgroundColor": "#999999"
    }
}?>

<?case iOS?>
<?properties {
    "heading": {
        "font": "System 14"
    },

    "divider": {
        "height": 0.5
    }
}?>
<?case tvOS?>
<?properties {
    "heading": {
        "font": "System 20"
    },

    "divider": {
        "height": 1
    }
}?>
<?end?>

<LMScrollView fitToWidth="true" panGestureRecognizer.allowedTouchTypes="direct, indirect" backgroundColor="#ffffff">
    <LMColumnView layoutMargins="8">
        <UILabel class="heading" text="Leading"/>

        <LMRowView class="cell" horizontalAlignment="leading">
            <UIImageView image="EmailIcon" tintColor="black"/>
            <UIImageView image="FaxIcon" tintColor="black"/>
            <UIImageView image="PhoneIcon" tintColor="black"/>
        </LMRowView>

        <LMColumnView class="cell" horizontalAlignment="leading">
            <UIImageView image="EmailIcon" tintColor="black"/>
            <UIImageView image="FaxIcon" tintColor="black"/>
            <UIImageView image="PhoneIcon" tintColor="black"/>
        </LMColumnView>

        <LMSpacer class="divider"/>

        <UILabel class="heading" text="Trailing"/>

        <LMRowView class="cell" horizontalAlignment="trailing">
            <UIImageView image="EmailIcon" tintColor="black"/>
            <UIImageView image="FaxIcon" tintColor="black"/>
            <UIImageView image="PhoneIcon" tintColor="black"/>
        </LMRowView>

        <LMColumnView class="cell" horizontalAlignment="trailing">
            <UIImageView image="EmailIcon" tintColor="black"/>
            <UIImageView image="FaxIcon" tintColor="black"/>
            <UIImageView image="PhoneIcon" tintColor="black"/>
        </LMColumnView>

        <LMSpacer class="divider"/>

        <UILabel class="heading" text="Center"/>

        <LMColumnView class="cell" horizontalAlignment="center">
            <UIImageView image="EmailIcon" tintColor="black"/>
            <UIImageView image="FaxIcon" tintColor="black"/>
            <UIImageView image="PhoneIcon" tintColor="black"/>
        </LMColumnView>
    </LMColumnView>
</LMScrollView>
