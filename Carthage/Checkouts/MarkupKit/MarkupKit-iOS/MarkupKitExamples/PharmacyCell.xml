<root>
    <LMColumnView spacing="4" layoutMarginBottom="8">
        <LMRowView alignToBaseline="true" spacing="4">
            <UILabel weight="1" text="$name" font="headline"/>
            <UILabel text="$distance" font="body" textColor="#808080"/>
        </LMRowView>

        <UILabel text="$address" numberOfLines="0" font="body"/>

        <LMColumnView spacing="4">
            <LMRowView>
                <UIImageView image="PhoneIcon" tintColor="#121212" contentMode="scaleAspectFit"/>
                <UILabel text="$phone" weight="1" font="caption1"/>
            </LMRowView>
            <LMRowView>
                <UIImageView image="FaxIcon" tintColor="#121212" contentMode="scaleAspectFit"/>
                <UILabel text="$fax" weight="1" font="caption1"/>
            </LMRowView>
            <LMRowView>
                <UIImageView image="EmailIcon" tintColor="#121212" contentMode="scaleAspectFit"/>
                <UILabel text="$email" weight="1" font="caption1"/>
            </LMRowView>
        </LMColumnView>
    </LMColumnView>
</root>
