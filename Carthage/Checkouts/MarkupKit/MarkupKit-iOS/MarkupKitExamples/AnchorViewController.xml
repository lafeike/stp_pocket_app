<?properties {
    "label": {
        "layer.borderColor": "#cccccc"
    }
}?>

<?case iOS?>
<?properties {
    "label": {
        "layer.borderWidth": 0.5
    }
}?>
<?case tvOS?>
<?properties {
    "label": {
        "layer.borderWidth": 1
    }
}?>
<?end?>

<LMLayerView layoutMarginsRelativeArrangement="false" backgroundColor="#ffffff">
    <LMAnchorView layoutMargins="16">
        <UILabel class="label" text="Top Left" anchor="top, left"/>
        <UILabel class="label" text="Top" anchor="top"/>
        <UILabel class="label" text="Top Right" anchor="top, right"/>

        <UILabel class="label" text="Left" anchor="left"/>

        <UILabel class="label" text="None"/>

        <UILabel class="label" text="Right" anchor="right"/>

        <UILabel class="label" text="Bottom Left" anchor="bottom, left"/>
        <UILabel class="label" text="Bottom" anchor="bottom"/>
        <UILabel class="label" text="Bottom Right" anchor="bottom, right"/>
    </LMAnchorView>
</LMLayerView>
